include ../molecules/breadcrumb
include ../molecules/product-priview-item
include ../organisms/catalog-filters
include ../organisms/catalog-sort-filter-buttons
include ../organisms/pagination

block main
    main
        .container-fluid.container-xxl
            - var breadcrumb = [{name: 'Хлопчикам'}, {name: 'Сорочки', active: true}]
            +Breadcrumb(breadcrumb)
            section.mb-80.catalog-section
                .d-flex.flex-column
                    .d-flex.mb-16.align-items-center.flex-column.flex-md-row.order-1.order-md-0.catalog-header-container
                        h1.h4.f-medium.mb-16.mb-md-0 Розвиток та школа
                        +CatalogSortFilterButtons()
                .row
                    .col-md-4.col-xxl-3.col-12.d-none.d-md-block
                        +CatalogFilters()
                    .col-md-8.col-xxl-9.col-12
                        .row.row-cols-xxl-4.row-cols-2.row-cols-lg-3
                            - var items = [{image: '',name: 'Новорічниай одяг для вашого малюка',price: '1200 ₴', oldPrice: '1785 ₴', isNew: true, salePercent: '-30%', isEnd: true},{image: '', isFavorite: true, name: 'Новорічниай одяг для вашого малюка',price: '1200 ₴', oldPrice: '1785 ₴', salePercent: '-30%'}, {image: '',name: 'Новорічниай одяг для вашого малюка',price: '1200 ₴', oldPrice: '1785 ₴', isChestnut: true}, ]
                            each item in [...items, ...items, ...items]
                                .col
                                    +ProductPreviewItem(item)(href="product.html")
                        .text-center
                            a.btn.btn-green-secondary.w-250 Дивитися ще
                        .row.row-cols-md-1.row-cols-xxl-3.align-items-center.d-flex
                            .d-none.d-xxl-block
                            +Pagination()
