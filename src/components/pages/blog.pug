extends ../templates/layout
include ../molecules/breadcrumb
include ../molecules/blog-item
include ../organisms/carousel-medium
include ../organisms/pagination

block main
    main
        .container-fluid.container-xxl
            - var breadcrumb = [{name: 'Головна'}, {name: 'Блог'}, {name: 'Усі акції', active: true}]
            +Breadcrumb(breadcrumb)
            +CarouselMedium()
            section.mb-80
                h1.h4.f-medium.mb-28 Блог
                .row.row-cols-xxl-4.row-cols-lg-3.row-cols-sm-2.row-cols-1
                    - var items = [{name: 'Новорічниай одяг для вашого малюка', author: 'Анна Шуленина'}, {name: 'Новорічниай одяг для вашого малюка', author: 'Анна Шуленина'}, {name: 'Новорічниай одяг для вашого малюка', author: 'Анна Шуленина'}, {name: 'Новорічниай одяг для вашого малюка', author: 'Анна Шуленина'}]
                    each item in [...items, ...items, ...items]
                        .col.mb-20
                            +BlogItem(item)
                .text-center
                    a.btn.btn-green-secondary.w-250 Дивитися ще
                +Pagination()