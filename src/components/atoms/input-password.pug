mixin InputPassword()
    .input-password(class= attributes.class)
        if attributes.label
            label.form-label(for= attributes.id)= attributes.label
        .input-group
            input.form-control(required= attributes.required placeholder= attributes.placeholder id= attributes.id type="password")
            button.btn.btn-password
                i.ci-Hide
                i.ci-Show.d-none
        if attributes.validFeedback
            .valid-feedback= attributes.validFeedback
        if attributes.invalidFeedback
            .invalid-feedback= attributes.invalidFeedback