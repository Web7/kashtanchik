mixin InputPhone()
    div(class= attributes.class)
        if attributes.label
            label.form-label(for= attributes.id)= attributes.label
        input.form-control.form-phone(required= attributes.required placeholder= attributes.placeholder id= attributes.id type="tel")
        if attributes.validFeedback
            .valid-feedback= attributes.validFeedback
        if attributes.invalidFeedback
            .invalid-feedback= attributes.invalidFeedback