mixin CarouselMedium()
    .ksht-carousel-medium.mb-36
        .carousel.slider.carousel-fade#carouselMedium
            .carousel-indicators
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="0" class="active")
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="1")
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="2")
            .carousel-inner
                .carousel-item.active
                    .carousel-item-content

                .carousel-item
                    .carousel-item-content

                .carousel-item
                    .carousel-item-content

            button.carousel-control-prev(type="button" data-bs-target="#carouselMedium" data-bs-slide="prev")
                i.ci-Chevron_Left
            button.carousel-control-next(type="button" data-bs-target="#carouselMedium" data-bs-slide="next")
                i.ci-Chevron_Right