mixin CarouselMedium(text)
    .ksht-carousel-medium.mb-36
        .carousel.slider.carousel-fade#carouselMedium
            .carousel-indicators
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="0" class="active")
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="1")
                button(type="button" data-bs-target="#carouselMedium" data-bs-slide-to="2")
            .carousel-inner
                .carousel-item.active
                    .carousel-item-content

                .carousel-item
                    .carousel-item-content

                .carousel-item
                    .carousel-item-content

            button.carousel-control-prev.d-none.d-md-block(type="button" data-bs-target="#carouselMedium" data-bs-slide="prev")
                i.ci-Chevron_Left
            button.carousel-control-next.d-none.d-md-block(type="button" data-bs-target="#carouselMedium" data-bs-slide="next")
                i.ci-Chevron_Right
        if text
            p.p3.mt-8.px-20.px-xxl-0= text