mixin TopSlider()
    .ksht-top-slider
        .carousel.slide#topSlider(data-bs-ride="carousel")
            .carousel-indicators.d-xxl-none
                button(type="button" data-bs-target="#topSlider" data-bs-slide-to="0" class="active")
                button(type="button" data-bs-target="#topSlider" data-bs-slide-to="1")
                button(type="button" data-bs-target="#topSlider" data-bs-slide-to="2")
            .carousel-inner
                .carousel-item.active
                    .carousel-item-content.text-white
                        p.h2 Знижка 30% на одяг Konges Slojd та LIEWOOD
                        p.p3.mb-16 На хвилі стилю з улюбленими брендами
                        .text-center.text-sm-start
