mixin ProductPreviewItem(data)
    form(method="post" data-oc-toggle="ajax" data-oc-load="index.php?route=common/cart.info&language=en-gb" data-oc-target="#header-cart")
        .ksht-product-preview-item.d-inline-block.mb-30.not-available
            .ksht-product-preview-item-img(style="background-image: url(" + data.image + ")")
                .badge-container
                    if data.isNew
                        .badge.new.text-white.bg-secondary.p3.d-none.d-xxl-block.mb-8 New
                    if data.salePercent
                        .badge.new.text-white.bg-orange.p3.d-none.d-xxl-block= data.salePercent
                .right-container
                    button.ksht-add-to-favorites(type="submit" formaction="index.php?route=account/wishlist.add&language=en-gb")
                        i(class= (data.isFavorite ? 'ci-Heart_Fill_01' : 'ci-Heart_01'))
                    if data.isChestnut
                        i.ki-chestnut
            .d-flex.flex-column.ksht-product-preview-item-link.d-block
                .d-flex.align-items-start
                    a.product-link-name.dotdotdot-name.p3&attributes(attributes)(class= (data.isNotAvailable ? 'text-dark' : 'text-black'))= data.name
                    a.ms-auto(href="#" data-bs-toggle="modal" data-bs-target="#modalAddToBasket")
                        i.ci-Shopping_Cart_02.ksht-icon-circle.me-6.mx-xxl-16(class= (data.isNotAvailable ? 'bg-light' : 'bg-green-secondary'))
                .mt-auto
                    if !data.isNotAvailable
                        if data.oldPrice
                            s.p3.text-dark.me-8.me-xxl-16= data.oldPrice
                        b.p2.text-black.f-medium= data.price
                    else
                        p.p2.f-medium.text-dark Немає в наявності
